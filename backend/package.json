{
  "name": "taskgo-backend",
  "version": "1.0.0",
  "description": "TaskGo Backend API - PostgreSQL",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "migrate:firestore": "ts-node src/scripts/migrate-from-firestore.ts",
    "migrate:db": "node dist/scripts/migrate.js",
    "validate:migration": "ts-node src/scripts/validate-migration.ts",
    "populate:cities": "ts-node src/scripts/populate-cities-from-ibge.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "stripe": "^14.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
