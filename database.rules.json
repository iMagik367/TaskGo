{
  "rules": {
    ".read": false,
    ".write": false,
    
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "auth != null && auth.uid == $uid",
        ".validate": "newData.hasChildren(['uid', 'email']) && newData.child('uid').val() == auth.uid"
      }
    },
    
    "services": {
      "$serviceId": {
        ".read": "auth != null && (!data.exists() || data.child('active').val() == true)",
        ".write": false
      }
    },
    
    "orders": {
      "$orderId": {
        ".read": "auth != null && (!data.exists() || data.child('clientId').val() == auth.uid || data.child('providerId').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": false
      }
    },
    
    "products": {
      "$productId": {
        ".read": "auth != null && (!data.exists() || data.child('active').val() == true)",
        ".write": false
      }
    },
    
    "purchase_orders": {
      "$orderId": {
        ".read": "auth != null && (!data.exists() || data.child('clientId').val() == auth.uid || data.child('sellerId').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": false
      }
    },
    
    "messages": {
      "$conversationId": {
        ".read": "auth != null && (!data.exists() || data.child('participants').child(auth.uid).exists() || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": false
      }
    },
    
    "notifications": {
      "$notificationId": {
        ".read": "auth != null && (!data.exists() || data.child('userId').val() == auth.uid)",
        ".write": false
      }
    },
    
    "reviews": {
      "$reviewId": {
        ".read": "auth != null",
        ".write": false
      }
    },
    
    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    
    "typing": {
      "$conversationId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    
    "identity_verifications": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": false
      }
    }
  }
}
