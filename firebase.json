{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": [
    {
      "bucket": "task-go-ee85f.appspot.com",
      "rules": "storage.rules"
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "android/**",
      "app/**",
      "build/**",
      "scripts/**"
    ],
    "rewrites": [
      {
        "source": "/post/**",
        "function": "ssrAppPage"
      },
      {
        "source": "/product/**",
        "function": "ssrAppPage"
      },
      {
        "source": "/user/**",
        "function": "ssrAppPage"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "auth": {
      "port": 9099
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  }
}
