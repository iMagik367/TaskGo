rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role (safe - returns null if user doesn't exist)
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null ? userDoc.data.role : null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is provider
    function isProvider() {
      return isAuthenticated() && getUserRole() == 'provider';
    }
    
    // Helper function to check if user is client
    function isClient() {
      return isAuthenticated() && getUserRole() == 'client';
    }
    
    // Helper function to check if user document exists
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile (even if document doesn't exist yet, they can create it)
      allow read: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId) && request.auth.uid == userId;
      
      // Users can create their own profile during signup (direct from Android app)
      // CRÍTICO: Permitir criação mesmo se usuário não existe ainda (login Google)
      allow create: if isAuthenticated() && request.auth.uid == userId && 
        request.resource.data.uid == request.auth.uid;
      
      // Admins can read and write any user
      allow read, write: if isAdmin();
      
      // Providers can read client profiles when needed (only if user exists)
      // Mas permitir list queries por role mesmo se usuário não existe ainda
      allow read: if (isProvider() || isClient()) && userExists();
      
      // Allow list queries (queries by role) for authenticated users
      // This is needed for map locations and provider/store listings
      // CRÍTICO: Permitir mesmo se o usuário não existe ainda (para login Google)
      allow list: if isAuthenticated();
    }
    
    // CRÍTICO: Permitir queries por CPF/CNPJ para login de prestador (usuários não autenticados)
    // Esta regra permite que usuários não autenticados busquem por CPF/CNPJ para fazer login
    // Limitado a 1 resultado para segurança - o código já garante isso
    match /users {
      // Permitir queries não autenticadas limitadas a 1 resultado
      // Necessário para login de prestador que busca o email pelo documento (CPF/CNPJ)
      // O código já limita a 1 resultado, então esta regra é segura
      allow list: if request.query.limit <= 1;
    }

    // Products collection
    match /products/{productId} {
      // Anyone authenticated can read active products
      allow read: if isAuthenticated() && 
        (!resource.exists || resource.data.active == true);
      
      // Create: Only authenticated users can create products
      allow create: if isAuthenticated() && 
        request.resource.data.sellerId == request.auth.uid;
      
      // Update: Only product owner can update
      allow update: if isAuthenticated() && 
        resource.data.sellerId == request.auth.uid &&
        request.resource.data.sellerId == request.auth.uid;
      
      // Delete: Only product owner (soft delete by setting active = false)
      allow delete: if false; // Use update instead
      
      // Admins can do everything
      allow read, write: if isAdmin();
    }

    // Orders collection (for service orders)
    match /orders/{orderId} {
      // Read: owners can read their orders, providers can read pending orders
      allow read: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.providerId == request.auth.uid ||
        (isProvider() && 
         resource.data.status == "pending" && 
         resource.data.deleted != true)
      );
      
      // Create: Authenticated clients can create orders
      allow create: if isAuthenticated() && 
        request.resource.data.clientId == request.auth.uid;
      
      // Update: Only by owners (for status updates, etc.)
      allow update: if isAuthenticated() && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.providerId == request.auth.uid);
      
      // Delete: No direct deletes (soft delete handled by Cloud Functions)
      allow delete: if false;
    }
    
    // Allow list queries on orders collection for authenticated users
    // This is needed for providers to query pending orders
    match /orders {
      allow list: if isAuthenticated();
    }

    // Purchase Orders collection (for product orders)
    match /purchase_orders/{orderId} {
      // Order owners (client and provider) can read
      allow read: if isAuthenticated() && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.providerId == request.auth.uid);
      
      // Create: Authenticated clients can create purchase orders
      allow create: if isAuthenticated() && 
        request.resource.data.clientId == request.auth.uid;
      
      // Update: Only by owners (for status updates, etc.)
      allow update: if isAuthenticated() && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.providerId == request.auth.uid);
      
      // Delete: No direct deletes (soft delete handled by Cloud Functions)
      allow delete: if false;
    }

    // Payments collection
    match /payments/{paymentId} {
      // Only payment owners can read
      allow read: if isAuthenticated() && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.providerId == request.auth.uid);
      
      // Create/update/delete: Cloud Functions only
      allow create, update, delete: if false;
    }

    // Services collection
    match /services/{serviceId} {
      // Anyone authenticated can read public services
      allow read: if isAuthenticated();
      
      // Create: Any authenticated user can create services (providerId must match auth.uid)
      allow create: if isAuthenticated() && 
        request.resource.data.providerId == request.auth.uid;
      
      // Update/delete: Only owner or admin
      allow update: if isAuthenticated() && 
        (resource.data.providerId == request.auth.uid || isAdmin());
      
      allow delete: if false; // Use soft delete (update active = false) instead
    }
    
    // Allow list queries on services collection for authenticated users
    // This is needed to query active services
    match /services {
      allow list: if isAuthenticated();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Update: Users can mark their own notifications as read
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      
      // Create/delete: Cloud Functions only
      allow create, delete: if false;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews for public services
      allow read: if isAuthenticated();
      
      // Create: Any authenticated user can create reviews
      allow create: if isAuthenticated() && 
        request.resource.data.reviewerId == request.auth.uid;
      
      // Update/delete: Only review owner
      allow update, delete: if isAuthenticated() && 
        resource.data.reviewerId == request.auth.uid;
      
      // Admins can moderate
      allow update, delete: if isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      // Users can read their own reports
      allow read: if isAuthenticated() && 
        resource.data.reporterId == request.auth.uid;
      
      // Create: Any authenticated user
      allow create: if isAuthenticated() && 
        request.resource.data.reporterId == request.auth.uid;
      
      // Update/delete: Only admins can handle reports
      allow update, delete: if isAdmin();
    }

    // Conversations collection (AI chat)
    match /conversations/{conversationId} {
      // Users can only access their own conversations
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Create: Users create their own conversations
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }

    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      // Users can only access messages in their own conversations
      allow read: if isAuthenticated() && 
        get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
      
      // Create/update/delete: Cloud Functions only
      allow create, update, delete: if false;
    }

    // AI usage logs (read-only for users, admin-only write)
    match /ai_usage/{logId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow write: if false; // Cloud Functions only
    }

    // Moderation logs (admin only)
    match /moderation_logs/{logId} {
      allow read, write: if isAdmin();
      allow read: if false;
    }

    // Transfers (admin only)
    match /transfers/{transferId} {
      allow read, write: if isAdmin();
    }

    // LGPD Compliance Collections
    // User consents - users can read/write their own consents
    match /user_consents/{consentId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Consents are immutable (LGPD requirement)
    }

    // Data exports - users can read their own exports
    match /data_exports/{exportId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Exports are immutable
    }

    // Addresses collection - users can only access their own addresses
    match /addresses/{addressId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && 
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Cards collection - users can only access their own cards
    match /cards/{cardId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && 
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Data access logs - users can read their own logs
    match /data_access_logs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if false; // Only system/Cloud Functions can create
      allow update, delete: if false; // Logs are immutable
    }

    // Data deletion requests - users can read/write their own requests
    match /data_deletion_requests/{requestId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false; // Deletion requests must be kept for legal compliance
    }

    // Service Categories collection
    match /service_categories/{categoryId} {
      // Anyone authenticated can read categories
      allow read: if isAuthenticated();
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Product Categories collection
    match /product_categories/{categoryId} {
      // Anyone authenticated can read categories
      allow read: if isAuthenticated();
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Home Banners collection
    match /homeBanners/{bannerId} {
      // Anyone authenticated can read active banners
      allow read: if isAuthenticated() && 
        (!resource.exists || resource.data.active == true);
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Account Change Requests collection
    // Usada para solicitar mudança de modo de conta (CLIENTE, PRESTADOR, VENDEDOR)
    match /account_change_requests/{requestId} {
      // Usuário só pode ler suas próprias solicitações
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      
      // Criar: usuário autenticado cria solicitação para si mesmo
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid &&
        // Sempre começa como PENDING
        request.resource.data.status == 'PENDING' &&
        // Não permitir definir campos de processamento no cliente
        !('processedAt' in request.resource.data) &&
        !('processedBy' in request.resource.data) &&
        !('rejectionReason' in request.resource.data);
      
      // Atualizar / deletar: apenas via Admin SDK / Cloud Functions (client não pode)
      allow update, delete: if false;
    }
    
    // Bank Accounts collection
    match /bank_accounts/{accountId} {
      // Users can only read their own bank accounts
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Users can create their own bank accounts
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update their own bank accounts
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own bank accounts
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Product Payments collection
    match /product_payments/{paymentId} {
      // Users can read payments for their orders or as seller
      allow read: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.sellerId == request.auth.uid
      );
      
      // Only Cloud Functions can create/update payments
      allow create, update, delete: if false;
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      // Users can read shipments for their orders or as seller
      allow read: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.sellerId == request.auth.uid
      );
      
      // Sellers can create shipments for their orders
      allow create: if isAuthenticated() && 
        request.resource.data.sellerId == request.auth.uid;
      
      // Sellers can update their shipments
      allow update: if isAuthenticated() && 
        resource.data.sellerId == request.auth.uid &&
        request.resource.data.sellerId == request.auth.uid;
      
      // Only Cloud Functions can delete
      allow delete: if false;
    }
    
    // Tracking Events collection
    match /tracking_events/{eventId} {
      // Users can read tracking events for their orders
      allow read: if isAuthenticated();
      
      // Only Cloud Functions can create/update/delete tracking events
      allow create, update, delete: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
